<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>inicio</servlet-name>
        <servlet-class>com.concomics.controller.InicioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>historias</servlet-name>
        <servlet-class>com.concomics.controller.HistoriaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inicio</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.concomics.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.concomics.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cadastro</servlet-name>
        <servlet-class>com.concomics.controller.CadastroController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastro</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>catalogos</servlet-name>
        <servlet-class>com.concomics.controller.CatalogoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalogos</servlet-name>
        <url-pattern>/catalogos</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>estante</servlet-name>
        <servlet-class>com.concomics.controller.EstanteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>estante</servlet-name>
        <url-pattern>/estante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>historias</servlet-name>
        <url-pattern>/historias</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>3600</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>inicio</welcome-file>
    </welcome-file-list>
</web-app>
